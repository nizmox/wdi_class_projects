<h2>Create your Plant...</h2>

<form action="/plants/create" method="post" class="create_plant">
  <p>
    <label for="name">Name: </label>
    <input type="text" name="name" id="name" required>
  </p>
  <p>
    <label for="latin_name">Latin Name: </label>
    <input type="text" name="latin_name" id="latin_name">
  </p>
  <p>
    <label for="region">Region: </label>
    <input type="text" name="region" id="region">
  </p>
  <p>
    <label for="photo">Photo: </label>
    <input type="url" name="photo" id="photo" required>
  </p>
  <button>Create Butterfly!</button>
</form>

