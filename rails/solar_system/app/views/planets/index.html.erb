<h1>Welcome to the Planets Database!</h1>

<% if @planets.any? %>
  <ul>
    <% @planets.each do |planet| %>
      <li>
        <%= link_to(planet.name, planet_path(planet.id)) %> has <%= pluralize(planet.moons, 'moon') %> - 
        <%= link_to('edit', edit_planet_path(planet.id)) %> - 
        <%= button_to('delete', planet_delete_path(planet.id)) %>
      </li>
    <% end %>
  </ul>
<% end %>